<UserControl x:Class="LeapfrogEditor.GunSystemPropEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapfrogEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <StackPanel Margin="2">
      <local:HeadlineControl Headline="Gun System Properties" />
      <local:StringEditorControl Headline="Body Name" MyValue="{Binding BodyName, Mode=TwoWay}" />
      <local:DoubleEditorControl Headline="Origin X" MyValue="{Binding EmitterOriginX, Mode=TwoWay}" />
      <local:DoubleEditorControl Headline="Origin Y" MyValue="{Binding EmitterOriginY, Mode=TwoWay}" />
      <local:DoubleEditorControl Headline="Angle" MyValue="{Binding Angle, Mode=TwoWay}" />
      <local:DoubleEditorControl Headline="Fire Rate" MyValue="{Binding FireRate, Mode=TwoWay}" />
      <local:IntEditorControl Headline="Life Time" MyValue="{Binding LifeTime, Mode=TwoWay}" />
      <local:DoubleEditorControl Headline="Impulse Mag." MyValue="{Binding ImpulseMagnitude, Mode=TwoWay}" />
      <local:BoolEditorControl Headline="Bouncy" MyValue="{Binding Bouncy, Mode=TwoWay}" />
   </StackPanel>
</UserControl>
