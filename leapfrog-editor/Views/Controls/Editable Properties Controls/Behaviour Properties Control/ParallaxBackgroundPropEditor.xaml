<UserControl x:Class="LeapfrogEditor.ParallaxBackgroundPropEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeapfrogEditor"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <DockPanel Margin="2">
      <Border CornerRadius="5" BorderBrush="DarkGray" BorderThickness="2">
         <StackPanel Margin="2">
            <local:HeadlineControl Headline="Parallax Background Properties" />
            <local:StringEditorControl Headline="Name" MyValue="{Binding BackgroundName, Mode=TwoWay}" />
            <local:DoubleEditorControl Headline="Parallax Amount" MyValue="{Binding ParallaxAmount, Mode=TwoWay}" />
         </StackPanel>
      </Border>
   </DockPanel>
</UserControl>
